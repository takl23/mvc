<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/glider.svg') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="proj-body">
    <nav class="proj-nav">
        <ul>
            <li><a href="{{ path('me') }}"><< TILLBAKA TILL REPORT <<</a></li>
        </ul>
    </nav>
