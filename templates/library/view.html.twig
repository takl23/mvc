{% extends 'base.html.twig' %}

{% block title %}Library view{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Cover</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for book in library %}
            <tr>
                <td>{{ book.getId|e }}</td>
                <td>{{ book.getTitle|e }}</td>
                <td>{{ book.getISBN|e }}</td>
                <td>{{ book.getAuthor|e }}</td>
                <td>{{ book.getCover|e }}</td>
                <td>
                    <a href="update/{{ book.getId|e }}"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
                    <a href="delete/{{ book.getId|e }}"><i class="fas fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
