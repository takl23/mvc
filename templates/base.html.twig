<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        <div class="header" role="banner">
            <div class="site-header site-title">
                <header>
                    <a href="{{ path('me') }}">
                        <h1>My Symfony Site</h1>
                    </a>
                </header>
            </div>
        
            <div class="nav">
                <nav>
                    <ul>
                        <li><a href="{{ path('me') }}">Me-page</a></li>
                        <li><a href="{{ path('about') }}">About</a></li>
                        <li><a href="{{ path('report') }}">Report</a></li>
                        <li><a href="{{ path('lucky') }}">Lucky number</a></li>
                        <li><a href="{{ path('api') }}">Api</a></li>
                        <li><a href="{{ path('card_start') }}">Card game</a></li>
                        <li><a href="{{ path('game21_start') }}">Game 21</a></li>
                        <li><a href="{{ path('card_session') }}">Session</a></li>
                        <li><a href="{{ path('app_library') }}">Library</a></li>
                        <li><a href="{{ path('metric') }}">Metric</a></li>
                    </ul>
                </nav>
            </div> 
        </div>

        <div class="main" role="main">
            <main>
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </main>
        </div>

        <div class="footer">
            <div class="social">
                <footer>
                    <p>&copy; 2024 takl23</p>
                </footer>
            </div>    
        </div>
    </body>
</html>
